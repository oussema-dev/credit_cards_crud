<%- include('./partials/header'); -%>
<div class="ui main text container segment">
    <div class="ui huge header">Update Credit Card Info</div>
    <form class="ui form" action="/cards/<%= card._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Type</label>
            <select class="ui search dropdown" name="card[type]" value="<%= card.type %>">
                <option value="Visa" <%= card.type == "Visa" ? 'selected':'' %>>Visa</option>
                <option value="Master Card" <%= card.type == "Master Card" ? 'selected':'' %>>Master Card</option>
                <option value="BestBank" <%= card.type == "BestBank" ? 'selected':'' %>>BestBank</option>
            </select>
        </div>
        <div class="field">
            <label>Owner</label>
            <input type="text" name="card[user]" value="<%= card.user %>" required>
        </div>
        <div class="field">
            <label>Card Number</label>
            <input type="text" name="card[number]" value="<%= card.number %>"
                pattern='[0-9]{4} \s*[0-9]{4}\s *[0-9]{4}\s *[0-9]{4}' placeholder="xxxx xxxx xxxx xxxx" required>
        </div>
        <div class="field">
            <label>CVV2</label>
            <input type="text" name="card[cvv2]" value="<%= card.cvv2 %>" pattern='[0-9]{4}' placeholder="xxxx"
                required>
        </div>
        <div class="field">
            <label>Expiry Date</label>
            <input type="date" name="card[expiry]" value="<%- card.expiry.toISOString().substring(0, 10) %>" required>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<%- include('./partials/footer'); -%>