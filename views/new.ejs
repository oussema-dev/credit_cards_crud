<%- include('./partials/header'); -%>
<div class="ui main text container segment">
    <div class="ui huge header">New Card</div>
    <form class="ui form" action="/cards" method="POST">
        <div class="field">
            <label>Type</label>
            <select class="ui search dropdown" name="card[type]">
                <option value="Visa">Visa</option>
                <option value="Master Card">Master Card</option>
                <option value="BestBank">BestBank</option>
            </select>
        </div>
        <div class="field">
            <label>Owner</label>
            <input type="text" name="card[user]" placeholder="Owner" required>
        </div>
        <div class="field">
            <label>Card Number</label>
            <input type="text" name="card[number]" placeholder="xxxx xxxx xxxx xxxx"
                pattern='[0-9]{4} \s*[0-9]{4}\s *[0-9]{4}\s *[0-9]{4}' required>
        </div>
        <div class="field">
            <label>CVV2</label>
            <input type="text" name="card[cvv2]" placeholder="xxxx" pattern='[0-9]{4}' required>
        </div>
        <div class="field">
            <label>Expiry Date</label>
            <input type="date" name="card[expiry]" required>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<%- include('./partials/footer'); -%>